#!/bin/bash

# Function to prompt for Yes/No
ask_yes_no() {
    while true; do
        read -p "Please enter yes/no or y/n: " yn
        case $yn in
            [Yy]* ) echo "You chose Yes."; return 0 ;; # Exit code 0 indicates 'Yes'
            [Nn]* ) echo "You chose No."; return 1 ;;  # Exit code 1 indicates 'No'
            * ) echo "Sorry, didn't understand. Please answer yes or no." ;;
        esac
    done
}

# Usage example:
if ask_yes_no; then
    echo "Confirmed action."
else
    echo "Cancelled action."
fi
